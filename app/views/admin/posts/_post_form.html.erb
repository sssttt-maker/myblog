<% if @post.errors.present? %>
  <ul id="error_explanation">
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div id="main_content">
  <h2>Post</h2>
  <%= form_with(model: [ :admin, @post ], local: true) do |f| %>
    <div class="form-group">
      <%= f.label :image, 'thumbnail' %>
      <%= f.file_field :image, class: 'form-control-file img-upload' %>
      <div class="preview"></div>
    </div>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :text %>
      <%= f.text_area :text, data: { provider: 'summernote' } %>
    </div>
    <div class="form-group">
      <%= f.label :category %>
      <%= collection_check_boxes(:post, :category_ids, Category.all, :id, :name) do |category| %>
        <%= category.label do %>
          <%= category.check_box %>
          <%= category.text %>
        <% end %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :tag_list %>
      <%= f.text_field :tag_list, value: @post.tag_list.join(','), class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.check_box :published, {}, 'published', 'draft' %>
      Publish
    </div>
    <%= f.submit :Save, class: 'submit-btn' %>
  <% end %>
</div>
