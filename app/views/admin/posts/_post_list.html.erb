  <div class="">
    <div class="">
      <h2><%= title %></h2>
    </div>
    <div class="">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Post</th>
            <th>Title</th>
            <th><%= link_to 'Category', admin_categories_path %></th>
            <th>Published</th>
            <th>Date</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% if @posts.any? %>
            <%= render @posts %>
          <% else %>
          <tr data-href="#" class="post-item">
            <td class="post-data"></td>
            <td class="post-data"></td>
            <td class="post-data">ポストはまだありません。</td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="posts-pagination">
        <%#= paginate @posts %>
      </div>
    </div>
  </div>
